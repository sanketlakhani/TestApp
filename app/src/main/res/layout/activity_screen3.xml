<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screen3Activity">

    <LinearLayout

        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/bold"
            android:text="Order Details"
            android:textColor="@color/black"
            android:textSize="@dimen/_17ssp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp">

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:src="@drawable/img_5" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/bold"
                    android:text="Meat Pizza"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mixed Pizza"
                    android:textSize="@dimen/_10ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/bold"
                    android:text="$8.30"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_75sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:fontFamily="@font/bold"
                    android:text="2"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton

                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:background="@drawable/buttonshape1"
                    android:text="-- +"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp">

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:src="@drawable/img_2" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/bold"
                    android:text="Veg Burger"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Burger"
                    android:textSize="@dimen/_10ssp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/bold"
                    android:text="$5.90"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:fontFamily="@font/bold"
                    android:text="5"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton

                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:background="@drawable/buttonshape1"
                    android:text="-- +"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp">

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_marginTop="@dimen/_4sdp"
                android:src="@drawable/img_3"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp"/>

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:textSize="@dimen/_13ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Sandwich"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:textSize="@dimen/_10ssp"
                    android:text="Best Sandwich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_13ssp"
                    android:text="$7.10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_marginTop="@dimen/_22sdp"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black"
                    android:text="1"
                    android:layout_marginLeft="@dimen/_79sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <androidx.appcompat.widget.AppCompatButton

                    android:layout_marginLeft="@dimen/_55sdp"
                    android:textSize="@dimen/_15ssp"
                    android:text="-- +"
                    android:textColor="@color/white"
                    android:background="@drawable/buttonshape1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_20sdp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView

        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:layout_marginLeft="@dimen/_230sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:text="$21.30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        android:text="     - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton

        android:text="CHECKOUT"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape1"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"/>

</LinearLayout>